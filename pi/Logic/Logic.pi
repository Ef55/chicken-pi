module Logic where

data Truth: Prop :=
  trivial: Truth

data Falsum: Prop := {}

data And (P: Prop) (Q: Prop): Prop :=
  conj (P) (Q): And P Q

data Or (P: Prop) (Q: Prop) : Prop :=
  lor (P): Or P Q
  ror (Q): Or P Q

not : Prop -> Prop
not = \P . P -> Falsum

exfalso : (P: Prop) -> (Q: Prop) -> P -> not P -> Q
exfalso = \_ _ p np . case np p of {}